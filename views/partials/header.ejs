<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof title !== 'undefined' ? title : 'RecipeCraft' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    rel="stylesheet">

  <link rel="stylesheet" href="/stylesheets/style.css">

  <!-- Font Awesome Icons -->
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
        crossorigin="anonymous"
        referrerpolicy="no-referrer" />
</head>

<body class="page-body">

<header class="top-shell">
  <nav class="navbar navbar-expand-lg top-nav">
    <div class="container-fluid px-4">

      <!-- Brand -->
      <a class="navbar-brand d-flex align-items-center"
         href="<%= user ? '/' : 'https://magical-profiterole-75787a.netlify.app/' %>">
        <img src="/images/logo.png" class="rc-logo-img me-2" alt="RecipeCraft logo">
        <span class="rc-brand">RecipeCraft</span>
      </a>

      <!-- Mobile Menu Toggle -->
      <button class="navbar-toggler nav-toggle-btn" type="button"
              data-bs-toggle="collapse" data-bs-target="#mainNav"
              aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- NAVIGATION -->
      <div class="collapse navbar-collapse justify-content-end" id="mainNav">

        <ul class="navbar-nav align-items-lg-center gap-lg-3">

          <!-- HOME (dynamic) -->
          <li class="nav-item">
            <a class="nav-link nav-link-main"
               href="<%= user ? '/' : 'https://fanciful-travesseiro-52d14e.netlify.app/' %>">
              Home
            </a>
          </li>

          <!-- ABOUT (dynamic) -->
          <li class="nav-item">
            <a class="nav-link nav-link-main"
               href="<%= user ? '/about' : 'https://fanciful-travesseiro-52d14e.netlify.app/about' %>">
              About
            </a>
          </li>

          <!-- CONTACT (ALWAYS backend, unchanged) -->
          <li class="nav-item">
            <a class="nav-link nav-link-main"
                herf="<%= user ? '/contact' : 'https://fanciful-travesseiro-52d14e.netlify.app/contact' %>">
              Contact
            </a>
          </li>

          <!-- Search Bar -->
          <li class="nav-item search-wrapper">
            <form class="nav-search-form d-flex" method="GET" action="/">
              <input
                id="navSearch"
                class="form-control form-control-sm nav-search"
                type="text"
                name="q"
                placeholder="Search recipes..."
                autocomplete="off"
                value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>">
            </form>

            <div id="searchSuggestions" class="search-suggestions"></div>
          </li>

          <!-- AUTH -->
          <% if (!user) { %>
              <!-- Logged OUT -->
              <li class="nav-item">
                <a class="nav-link nav-link-main" href="/login">
                  <i class="fa fa-right-to-bracket me-1"></i>Login
                </a>
              </li>

              <li class="nav-item">
                <a class="nav-link nav-link-main" href="/register">
                  <i class="fa fa-user-plus me-1"></i>Register
                </a>
              </li>

          <% } else { %>
              <!-- Logged IN -->
              <li class="nav-item">
                <a class="nav-link nav-link-main" href="/logout">
                  <i class="fa fa-right-from-bracket me-1"></i>Logout
                </a>
              </li>
          <% } %>

          <!-- Avatar -->
          <li class="nav-item">
            <a class="nav-avatar" href="#"></a>
          </li>

        </ul>
      </div>
    </div>
  </nav>
</header>

<main class="main-shell">
